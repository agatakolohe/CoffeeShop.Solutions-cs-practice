@using CoffeeShop.Models;
@{
    Layout = "_Layout";
}


<h1>Employee List</h1>

@if (@Model.Count == 0)
{
    <h3>No employees have been added yet!</h3>
}

@foreach (Employee employee in Model)
{
    <h3><a href="/employees/@employee.Id">@employee.EmployeeName</a></h3>
}

<p><a href="/">Back Home</a></p>